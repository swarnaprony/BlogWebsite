<%- include("partials/header"); -%>


<h1>
    Home
</h1>

<p> <%= homeStarting %> </p>


<% posts.forEach(function(post) { %>
    <div class="title">
        <h2>
            <%= post.title %>
        </h2>
        <p>
            <%= post.content.slice(0, 50).concat('...'); %>
            <a href="/posts/<%=post.title%>">Read More</a>
        </p>
    </div>
    <% }) %>

<%- include("partials/footer"); -%>